<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_pr_justifikasi_form" model="ir.ui.view">
            <field name="name">vit.product.request.form</field>
            <field name="model">vit.product.request</field>
            <field name="inherit_id" ref="vit_product_request.view_product_request_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <div class="oe_title" position="before">
                    <div class="oe_button_box">
                        <button type="object" name="action_view_justifikasi" class="oe_stat_button" icon="fa-pencil-square-o">
                            <field name="justifikasi_count" widget="statinfo" string="Justifikasi(s)"/>
                            <field name="justifikasi_ids" invisible="1"/>
                        </button>
                    </div>

                </div>
            </field>
        </record>


    </data>
</openerp>